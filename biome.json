{
   "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
   "linter": {
      "enabled": true,
      "rules": { "recommended": true }
   },
   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 3,
      "lineWidth": 120
   },
   "javascript": {
      "formatter": {
         "quoteStyle": "double",
         "semicolons": "always"
      }
   },
   "files": {
      "includes": ["src/**", "*.ts", "*.json"]
   }
}
